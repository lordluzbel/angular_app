<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="objectMapper" class="mx.com.sevenbrains.webservice.rest.CustomObjectMapper"/>
    <bean id="serializationConfig" class="org.codehaus.jackson.map.SerializationConfig" factory-bean="objectMapper" factory-method="getSerializationConfig"/>
</beans>